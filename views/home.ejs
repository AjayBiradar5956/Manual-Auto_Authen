<link rel="stylesheet" href="CSS/home.css">
<h1> Codial <%= title %>
</h1>

<div id="home-container">
    <section id="feed-posts">
        <% if(locals.user) { %>
            <h3> Posts </h3>
            <form action="/post/create" method="POST">
                <textarea name="content" cols="30" rows="3" placeholder="Type your post" required></textarea>
                <br>
                <input type="submit" value="Post">
            </form>

            <div id="post-list-container">

                <ul>
                    <% for(docs of posts) { %>

                        <%- include('_post') -%>

                            <% } %>
                </ul>
            </div>

            <% } %>
    </section>

    <section id="user-friends">
        <h4>Friends</h4>
        <% for (u of all_users) {%>
            <p>
                <a href="/user/profile/<%= u.id %>">
                    <%=u.name%>
                </a>
            </p>
            <%}%>
    </section>
</div>