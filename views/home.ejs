<h1> Codial <%= title %>
</h1>

<section id="feed-posts">
    <% if(locals.user) { %>
        <h3> Posts </h3>
        <form action="/post/create" method="POST">
            <textarea name="content" cols="30" rows="3" placeholder="Type your post" required></textarea>
            <br>
            <input type="submit" value="Post">
        </form>

        <div id="post-list-container">

            <ul>
                <% for(docs of posts) { %>

                    <p>
                        <li>
                            <%= docs.content %>
                                <small>
                                    <%= docs.user.name %>
                                </small>
                        </li>
                    </p>
                    <div class="post-comments">
                        <% if(locals.user) { %>

                            <form action="comment/create" method="POST">
                                <input type="text" placeholder="Enter your Comment" name="content" required>
                                <br>
                                <input type="hidden" name="post" value="<%= docs._id %>">
                                <br>
                                <input type="submit" value="Add Comment">
                            </form>
                            <% } %>
                                <div class="post-comments-list">
                                    <ul id="post-comments-<%=docs._id%>">
                                        <% for(comment of docs.comments) { %>
                                            <p>
                                                <%= comment.content %>
                                                    <br>
                                                    <small>
                                                        <%= comment.user.name %>
                                                    </small>
                                            </p>
                                            <%}%>

                                    </ul>
                                </div>
                    </div>
                    <% } %>
            </ul>
        </div>

        <% } %>
</section>