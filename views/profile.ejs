<h1>Profile Page</h1>


<% if(user.id==profile_user.id){ %>
    <form action="/user/update/<%=profile_user.id%>" enctype="multipart/form-data" method="post">
        <input type="text" value="<%=profile_user.name%>" name="name" placeholder="Your Name" required>
        <input type="email" value="<%=profile_user.email%>" name="email" placeholder="Your Email" required>
        <input type="file" name="avatar" placeholder="Profile Picture">
        <input type="submit" value="Update">
    </form>
    <% }else { %>
        <p>
            Name: <%= profile_user.name %>
        </p>
        <p>Email: <%= profile_user.email %>
        </p>
        <% } %>